{
    "image": "joaoopereira/devcontainer",
    "runArgs": [
        "--name",
        "joaoopereira-devcontainer",
        "--hostname",
        "devcontainer"
    ],
    // create file and folder that will be used later on by the devcontainer
    // this is required to persist data
    "initializeCommand": "touch .bash_history && mkdir -p repos",
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind,consistency=cached",
        "source=./.bash_history,target=/root/.bash_history,type=bind,consistency=cached",
        "source=./,target=/workspaces/devcontainer,type=bind,consistency=cached"
    ],
    "workspaceFolder": "/workspaces",
    "workspaceMount": "source=./repos/,target=/workspaces,type=bind,consistency=cached",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools-themes",
                "formulahendry.docker-explorer",
                "ms-azuretools.vscode-docker",
                "vscode-icons-team.vscode-icons",
                "GitHub.copilot",
                "outofsync42.select-compare-tabs",
                "earthly.earthfile-syntax-highlighting",
                "ms-dotnettools.csdevkit",
                "FullStackSpider.visual-nuget"
            ]
        }
    }
}